{
  "name": "ctrlv",
  "version": "1.0.0",
  "description": "Your cloud clipboard",
  "main": "server.js",
  "scripts": {
    "nyc": "nyc report",
    "start": "node server.js",
    "start-watch": "nodemon server.js",
    "test": "jest --detectOpenHandles",
    "test-watch": "nodemon --exec npm test",
    "dev": "concurrently \"npm run start-watch\" \"cd client && npm run start\"",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "author": "Lucas Czekaj",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.18.3",
    "express": "^4.16.4",
    "mongodb": "^3.1.10",
    "mongoose": "^5.4.2"
  },
  "devDependencies": {
    "babel-jest": "^24.0.0",
    "concurrently": "^4.1.0",
    "jest": "^24.0.0",
    "mongodb-memory-server": "^2.9.1",
    "morgan": "^1.9.1",
    "nodemon": "^1.18.9",
    "nyc": "^13.1.0",
    "supertest": "^3.3.0"
  },
  "engines": {
    "node": "8.14.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "env": "jest"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/client/"
    ],
    "testEnvironment": "node",
    "verbose": false,
    "setupFilesAfterEnv": [
      "./test/jest.setup.js"
    ]
  },
  "nyc": {
    "extension": [
      ".js"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "lines": 90
  }
}
