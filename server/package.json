{
  "name": "ctrlv",
  "version": "1.0.0",
  "description": "Your cloud clipboard",
  "main": "src/server.js",
  "scripts": {
    "postinstall_disabled": "cd ../client && npm install",
    "nyc": "nyc report",
    "start": "node",
    "start-watch": "nodemon",
    "test": "CI=true jest --detectOpenHandles",
    "test_disabled": "concurrently \"npm run jest\" \"cd client && npm test\"",
    "test-watch": "nodemon --exec npm test",
    "dev_disabled": "concurrently \"npm run start-watch\" \"cd client && npm run start\"",
    "heroku-postbuild": "cd client && npm install --only=dev && npm install && npm run build"
  },
  "author": "Lucas Czekaj",
  "license": "ISC",
  "dependencies": {
    "body-parser": "^1.19.0",
    "express": "^4.17.1",
    "lockfile": "^1.0.4",
    "mongodb": "^3.5.1",
    "mongoose": "^5.8.9"
  },
  "devDependencies": {
    "concurrently": "^5.0.2",
    "jest": "^24.9.0",
    "mongodb-memory-server": "^6.2.2",
    "morgan": "^1.9.1",
    "nodemon": "^2.0.2",
    "nyc": "^15.0.0",
    "supertest": "^4.0.2"
  },
  "engines": {
    "node": "8.14.0"
  },
  "standard": {
    "parser": "babel-eslint",
    "env": "jest"
  },
  "jest": {
    "testPathIgnorePatterns": [
      "<rootDir>/client/"
    ],
    "testEnvironment": "node",
    "verbose": false,
    "setupFilesAfterEnv": [ 
      "./src/test/jest.setup.js"
    ]
  },
  "nyc": {
    "extension": [
      ".js"
    ],
    "reporter": [
      "text",
      "html"
    ],
    "all": true,
    "check-coverage": true,
    "statements": 90,
    "functions": 90,
    "branches": 90,
    "lines": 90
  }
}
